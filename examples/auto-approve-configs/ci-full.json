{
  "_comment": "CI/CD config â€” broader permissions for automated pipelines with push access",
  "allow": [
    "npm *",
    "npx *",
    "node *",
    "git *",
    "cat *",
    "ls *",
    "grep *",
    "find *",
    "head *",
    "tail *",
    "wc *",
    "echo *",
    "mkdir *",
    "cp *",
    "mv *",
    "python3 *",
    "pytest *",
