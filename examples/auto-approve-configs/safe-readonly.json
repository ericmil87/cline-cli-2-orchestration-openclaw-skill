{
  "_comment": "Safe read-only config â€” for audit/review agents that should never modify code",
  "allow": [
    "cat *",
    "ls *",
    "grep *",
    "find *",
    "head *",
    "tail *",
    "wc *",
    "echo *",
    "tree *",
    "file *",
    "stat *",
    "diff *"
  ],
  "deny": [
    "rm *",
    "mv *",
    "cp *",
    "mkdir *",
    "touch *",
    "chmod *",
    "chown *",
    "sudo *",
    "git push *",
    "git commit *",
    "npm install *",
    "pip install *",
    "curl * | bash",
    "wget * | bash"
  ],
  "allowRedirects": false
}
